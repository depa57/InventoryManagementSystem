@model InventoryManagementSystem.Models.SalesDetails

@{
    ViewData["Title"] = "SalesReport";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sales Report </title>
    <link rel="stylesheet" href="~/css/purchaseReport.css">
</head>
<body>

    <div class="container">
        <div class="form-section">
            <form id="supplierForm">
                <div class="form-group row">
                    <div class="form-field">
                        <label for="from">From</label>
                        <input type="date" id="fromDate" name="from">
                    </div>
                    <div class="form-field">
                        <label for="to">To</label>
                        <input type="date" id="toDate" name="to">
                    </div>
                </div>

               
                <div class="form-group">
                    <button onclick="FetchSalesList()" type="button">Submit</button>
                </div>
            </form>
        </div>

        <div class="list-section">
            <div class="list-header">
                <h2>List</h2>
                <button href="#" class="back-button">Reset</button>
            </div>
            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Customer</th>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Per Price</th>
                        <th>Total Price</th>

                    </tr>
                </thead>
                <tbody id="listSalesBody">
                    <!-- Rows will be dynamically added here -->
                </tbody>
            </table>
        </div>
    </div>
    @section Scripts {
        <script src="~/js/purchaseReport.js"></script>
       
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

</body>
</html>




