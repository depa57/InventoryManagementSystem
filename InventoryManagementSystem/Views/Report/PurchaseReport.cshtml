                <span asp-validation-for="details.To" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="details.SupplierId" class="control-label"></label>
                <select asp-for="details.SupplierId" asp-items="Model.SupplierList" class="form-control js-example-basic-single">
                    <option disabled selected>--Select Supplier--</option>
                </select>
                <span asp-validation-for="details.SupplierId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
